@if (ShowErrors)
{
    <ul class="list-group mb-3">
        @foreach (string error in Errors)
        {
            <li class="list-group-item list-group-item-danger">@error</li>
        }
    </ul>
}

@code{

    [Parameter]
    public bool ShowErrors { get; set; }

    [Parameter]
    public IEnumerable<string> Errors { get; set; } = default!;

}