@page

@model ForgotPasswordModel

@{
    ViewData["Title"] = "Forgot your password";
}

<h1>@ViewData["Title"]</h1>
<hr/>

<p class="mb-3">Enter <strong>email</strong> to reset your account password.</p>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username"/>
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <button type="submit" class="w-100 btn btn-primary">Reset password</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}